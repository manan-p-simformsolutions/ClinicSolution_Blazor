@using ClinicSolution.Shared.Patient
<EditForm Model="@patient" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />

    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label text-md-right">Patient Name:</label>
        <div class="col-sm-10">
            <InputText class="form-control" id="name" @bind-Value="@patient.Name" />
            <ValidationMessage For="@(() => patient.Name)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="address1" class="col-sm-2 col-form-label text-md-right">Address 1:</label>
        <div class="col-sm-10">
            <InputText class="form-control" id="address1" @bind-Value="@patient.Address1" />
            <ValidationMessage For="@(() => patient.Address1)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="address2" class="col-sm-2 col-form-label text-md-right">Address 2:</label>
        <div class="col-sm-10">
            <InputText class="form-control" id="address2" @bind-Value="@patient.Address2" />
            <ValidationMessage For="@(() => patient.Address2)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="mobile" class="col-sm-2 col-form-label text-md-right">Mobile:</label>
        <div class="col-sm-10">
            <InputText class="form-control" id="mobile" @bind-Value="@patient.Mobile" />
            <ValidationMessage For="@(() => patient.Mobile)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="telephone" class="col-sm-2 col-form-label text-md-right">Telephone:</label>
        <div class="col-sm-10">
            <InputText class="form-control" id="telephone" @bind-Value="@patient.Telephone" />
            <ValidationMessage For="@(() => patient.Telephone)" />
        </div>
    </div>

@*     <div class="form-group row">
        <label for="lastappointmentid" class="col-sm-2 col-form-label text-md-right">Last Appointment ID:</label>
        <div class="col-sm-10">
            <InputText class="form-control" id="lastappointmentid" @bind="@patient.LastAppointmentId" />
        </div>
    </div> *@
    <div class="form-group row">
        <label for="lastappointmentid" class="col-sm-2 col-form-label text-md-right">Last Appointment ID:</label>
        <div class="col-sm-10">
            <InputNumber class="form-control" id="lastappointmentid" @bind-Value="@patient.LastAppointmentId" />
        </div>
    </div>



    <button type="submit" class="btn btn-success">@ButtonText</button>
</EditForm>

@code {
    [Parameter] public Patient patient { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
