<EditForm Model="@appointment" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label for="patientName" class="col-sm-2 col-form-label text-md-right">Patient Name :</label>
        <div class="col-sm-10">
            <InputText class="form-control" id="patientName" @bind-Value="@appointment.PatientName" />
            <ValidationMessage For="@(() => appointment.PatientName)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="aliasname" class="col-sm-2 col-form-label text-md-right">Alias Name :</label>
        <div class="col-sm-10">
            <InputText class="form-control" id="aliasname" @bind-Value="@appointment.Alias" />
            <ValidationMessage For="@(() => appointment.Alias)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="problem" class="col-sm-2 col-form-label text-md-right">Problem :</label>
        <div class="col-sm-10">
            <InputText class="form-control" id="problem" @bind-Value="@appointment.Problem" />
            <ValidationMessage For="@(() => appointment.Problem)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="clinicalmedicine" class="col-sm-2 col-form-label text-md-right">ClinicalMedicine :</label>
        <div class="col-sm-10">
            <InputTextArea class="form-control" id="clinicalmedicine" @bind-Value="@appointment.ClinicalMedicine" />
            <ValidationMessage For="@(() => appointment.ClinicalMedicine)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="prescription" class="col-sm-2 col-form-label text-md-right">Prescription :</label>
        <div class="col-sm-10">
            <InputTextArea class="form-control" id="prescription" @bind-Value="@appointment.Prescription" />
            <ValidationMessage For="@(() => appointment.Prescription)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="specification" class="col-sm-2 col-form-label text-md-right">Specification :</label>
        <div class="col-sm-10">
            <InputTextArea class="form-control" id="specification" @bind-Value="@appointment.Specification" />
            <ValidationMessage For="@(() => appointment.Specification)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="amount"  class="col-sm-2 col-form-label text-md-right">Amount :</label>
        <div class="col-sm-4 col-12">
            <InputNumber class="form-control" id="amount"  @bind-Value="@appointment.Amount" />
            <ValidationMessage For="@(() => appointment.Amount)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="appointmentdate"  class="col-sm-2 col-form-label text-md-right">Appointment Date :</label>
        <div class="col-sm-4 col-12">
            <InputDate class="form-control" id="appointmentdate"  @bind-Value="@appointment.AppointmentDate" />
            <ValidationMessage For="@(() => appointment.AppointmentDate)" />
        </div>
    </div>
    <button type="submit" class="btn btn-success">
        @ButtonText
    </button>
</EditForm>
@code {
    [Parameter] public Appointment appointment { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}